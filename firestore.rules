rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para lojas
    match /lojas/{lojaId} {
      allow read, write: if request.auth != null && request.auth.uid == lojaId;
    }
    
    // Regras para pedidos
    match /pedidos/{pedidoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para produtos
    match /produtos/{produtoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para categorias
    match /categorias/{categoriaId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para categorias adicionais
    match /categoriasAdicionais/{categoriaId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para configurações
    match /configuracoes/{configId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para histórico de pedidos
    match /historicoPedidos/{pedidoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para avaliações
    match /avaliacoes/{avaliacaoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para promoções
    match /promocoes/{promocaoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para relatórios
    match /relatorios/{relatorioId} {
      allow read, write: if request.auth != null;
    }
  }
} 