/* Animação para modal slide da direita */
.slide-right-enter {
  transform: translateX(100%);
  opacity: 0;
}

.slide-right-enter-active {
  transform: translateX(0);
  opacity: 1;
  transition: transform 0.3s ease-out, opacity 0.3s ease-out;
}

.slide-right-exit {
  transform: translateX(0);
  opacity: 1;
}

.slide-right-exit-active {
  transform: translateX(100%);
  opacity: 0;
  transition: transform 0.3s ease-in, opacity 0.3s ease-in;
}

/* Máscara do modal */
.slide-right-enter .ant-modal-mask {
  opacity: 0;
}

.slide-right-enter-active .ant-modal-mask {
  opacity: 1;
  transition: opacity 0.3s ease-out;
}

.slide-right-exit .ant-modal-mask {
  opacity: 1;
}

.slide-right-exit-active .ant-modal-mask {
  opacity: 0;
  transition: opacity 0.3s ease-in;
}

/* Estilos customizados para checkboxes roxos */
input[type="checkbox"] {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 18px;
  height: 18px;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  background-color: white;
  cursor: pointer;
  position: relative;
  transition: all 0.2s ease;
}

input[type="checkbox"]:checked {
  background-color: #9333ea;
  border-color: #9333ea;
}

input[type="checkbox"]:checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 11px;
  font-weight: bold;
  line-height: 1;
}

input[type="checkbox"]:hover {
  border-color: #9333ea;
}

input[type="checkbox"]:focus {
  outline: none;
  box-shadow: 0 0 0 2px rgba(147, 51, 234, 0.2);
}

/* Regra específica para o modal de criar usuário */
.fixed.inset-0 > div:last-child.bg-white {
  background-color: white !important;
  background: white !important;
}

/* Regras específicas para os botões do modal - sobrescrevendo as regras globais */
.fixed.inset-0 > div:last-child button[type="submit"] {
  background-color: #9333ea !important;
  background: #9333ea !important;
  color: white !important;
}

.fixed.inset-0 > div:last-child button[type="submit"]:hover {
  background-color: #7c3aed !important;
  background: #7c3aed !important;
}

.fixed.inset-0 > div:last-child button[type="button"] {
  background-color: white !important;
  background: white !important;
  color: #374151 !important;
  border: 1px solid #d1d5db !important;
}

.fixed.inset-0 > div:last-child button[type="button"]:hover {
  background-color: #f9fafb !important;
  background: #f9fafb !important;
}

/* Regras específicas para o footer do modal */
.fixed.inset-0 > div:last-child .border-t {
  background-color: #f8fafc !important;
  background: #f8fafc !important;
}

/* Desabilitar completamente as validações nativas do navegador */
input:invalid,
textarea:invalid,
select:invalid {
  box-shadow: none !important;
  outline: none !important;
}

/* Esconder mensagens de validação nativas do navegador */
input:invalid::before,
textarea:invalid::before,
select:invalid::before,
input:invalid::after,
textarea:invalid::after,
select:invalid::after {
  display: none !important;
  content: none !important;
}

/* Desabilitar tooltips de validação nativos */
input[title*="Please"],
textarea[title*="Please"],
select[title*="Please"] {
  pointer-events: none;
}

/* Garantir que apenas nossas mensagens de erro apareçam */
.form-error-message {
  display: block !important;
  color: #dc2626 !important;
  font-size: 0.875rem !important;
  margin-top: 0.25rem !important;
}

/* Garantir que o hover do dropdown funcione */
.CustomDropdown button:hover {
  background-color: #faf5ff !important;
  background: #faf5ff !important;
  border-color: #c4b5fd !important;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1) !important;
}

.CustomDropdown .py-1 button:hover {
  background-color: #faf5ff !important;
  background: #faf5ff !important;
  color: #7c3aed !important;
  font-weight: 500 !important;
}

/* Hover específico para opções selecionadas */
.CustomDropdown .py-1 button.bg-purple-100:hover {
  background-color: #e9d5ff !important;
  background: #e9d5ff !important;
  color: #6b21a8 !important;
}

/* Garantir que a rotação da seta funcione */
.CustomDropdown svg {
  transform-origin: center !important;
  transition: transform 0.2s ease-in-out !important;
}

.CustomDropdown svg.rotate-180 {
  transform: rotate(180deg) !important;
}

/* Garantir que a rotação do ícone X funcione perfeitamente */
.CustomModal svg {
  transform-origin: center !important;
  transition: transform 0.3s ease-in-out !important;
}

.CustomModal svg.group-hover\:rotate-90:hover {
  transform: rotate(90deg) !important;
}

/* CSS específico para o modal de criar usuário */
.fixed.inset-0 > div:last-child svg {
  transform-origin: center !important;
  transition: transform 0.3s ease-in-out !important;
}

.fixed.inset-0 > div:last-child button:hover svg {
  transform: rotate(90deg) !important;
}

/* Animações do modal - entrada e saída suaves */
.modal-closed {
  opacity: 0 !important;
  transform: translateY(-7rem) scale(0.9) !important;
  transition: all 0.3s ease-out !important;
}

.modal-open {
  opacity: 1 !important;
  transform: translateY(0) scale(1) !important;
  transition: all 0.3s ease-out !important;
}
