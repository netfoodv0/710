@import "tailwindcss";

/* Estilos customizados para o dashboard minimalista */
body {
  background-color: #fafafa;
  color: #111827;
  font-feature-settings: "rlig" 1, "calt" 1;
}

/* Remover outlines globais */
* {
  outline: none !important;
}

/* Animações para filtros de status */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Animações para modais removidas */

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.status-filter {
  animation: fadeInUp 0.6s ease-out;
}

.status-filter:hover {
  animation: pulse 0.3s ease-in-out;
}

/* Estilos do Sidebar */
.sidebar-item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0.75rem 1rem;
  color: #374151;
  border-radius: 0.5rem;
  transition: colors 0.2s;
}

.sidebar-item:hover {
  background-color: #f3f4f6;
}

.sidebar-item.active {
  background-color: #f3f4f6;
  color: #111827;
}

.sidebar-item.active .w-5 {
  color: #374151;
}

/* Estilos para cards minimalistas */
.card {
  background-color: white;
  border: 1px solid;
  border-radius: 0.5rem;
  border-color: #cfd1d3 !important;
}

/* Estilo específico para aba geral */
.aba-geral-card {
  background-color: white;
  border: 2px solid;
  border-radius: 0.5rem;
  box-shadow: none;
  border-color: #cfd1d3 !important;
}

/* Garantir que o conteúdo seja visível */
body {
  background-color: #fafafa;
  color: #111827;
  font-feature-settings: "rlig" 1, "calt" 1;
  min-height: 100vh;
}

/* Garantir que o main content seja visível */
main {
  min-height: 100vh;
  background-color: #fafafa;
}

/* Estilos para botões padronizados */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 1rem;
  font-weight: 500;
  transition: all 0.2s;
  outline: none;
  height: 40px;
  border-radius: 2px;
}

.btn-primary {
  color: #ef4444;
  padding: 0.75rem 1rem;
  border-radius: 0.125rem;
  width: 100%;
}

.btn-secondary {
  color: #374151;
  padding: 0.75rem 1rem;
  border-radius: 0.125rem;
  width: 100%;
}

.btn-secondary:hover {
  background-color: #f3f4f6;
}

/* Transições suaves */
* {
  transition: colors 0.2s;
}

/* Scrollbar minimalista - apenas uma */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f8fafc;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 4px;
  border: 1px solid #f1f5f9;
}

::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}

::-webkit-scrollbar-thumb:active {
  background: #64748b;
}

/* Para Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: #cbd5e1 #f8fafc;
}

/* Classe para sempre mostrar scrollbar no container principal */
.always-scroll {
  overflow-y: scroll !important;
}

/* Estilos para labels do gráfico de pizza */
.recharts-pie-label {
  z-index: 10 !important;
  pointer-events: none;
}

.recharts-pie-label-text {
  font-size: 12px !important;
  font-weight: 500 !important;
  fill: #374151 !important;
}

/* Garantir que modais e overlays não interfiram com a navegação */
.modal-overlay {
  z-index: 9998 !important;
}

/* Forçar fundo branco em todos os modais */
.fixed.inset-0 div[class*="bg-white"] {
  background-color: white !important;
  background: white !important;
}

/* Garantir que o conteúdo dos modais seja sempre visível */
div[role="dialog"] {
  background-color: white !important;
  background: white !important;
}

/* Regras específicas para o CustomModal */
.fixed.inset-0 .bg-white {
  background-color: white !important;
  background: white !important;
}

/* Forçar fundo branco em qualquer div com classe bg-white */
.bg-white {
  background-color: white !important;
  background: white !important;
}

/* Regra específica para o modal de criar usuário */
.CustomModal div[class*="bg-white"] {
  background-color: white !important;
  background: white !important;
}

/* Forçar fundo branco em todos os modais */
div[style*="background-color: white"] {
  background-color: white !important;
  background: white !important;
}

/* Estilos para drag and drop de produtos */
.sortable-produto {
  transition: all 0.2s ease;
}

.sortable-produto.dragging {
  cursor: grabbing;
  transform-origin: center;
  transition: none !important;
}

/* Estilos para drag and drop de categorias */
.sortable-categoria {
  transition: all 0.2s ease;
}

.sortable-categoria.dragging {
  cursor: grabbing;
  transform-origin: center;
  transition: none !important;
}

/* Scrollbars invisíveis para componentes de analytics */
.analytics-scroll::-webkit-scrollbar {
  width: 0px;
  background: transparent;
}

.analytics-scroll::-webkit-scrollbar-track {
  background: transparent;
}

.analytics-scroll::-webkit-scrollbar-thumb {
  background: transparent;
}

.analytics-scroll::-webkit-scrollbar-thumb:hover {
  background: transparent;
}

.analytics-scroll::-webkit-scrollbar-thumb:active {
  background: transparent;
}

/* Para Firefox - scrollbars invisíveis */
.analytics-scroll {
  scrollbar-width: none;
  scrollbar-color: transparent transparent;
}

/* Classe específica para sempre esconder scrollbars */
.hide-scrollbar {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;     /* Firefox */
}

.hide-scrollbar::-webkit-scrollbar {
  display: none;             /* Chrome, Safari and Opera */
}

